{
  "name": "@khanonjs/engine",
  "version": "0.0.9",
  "description": "A typescript game engine extending Babylon.js",
  "private": false,
  "author": {
    "name": "Lorenzo Portillo"
  },
  "license": "",
  "repository": {
    "type": "git",
    "url": "https://github.com/Khanon/khanon.js.git"
  },
  "main": "index.js",
  "scripts": {
    "build": "npm run clean && tsc",
    "build:docs": "typedoc ./src",
    "test": "cross-env TS_NODE_PROJECT='./tsconfig.mocha.json' mocha -r ./mocha-setup.js -r ts-node/register 'src/**/*.spec.ts'",
    "link": "cpy package.json ./src && cd ./src && npm link",
    "unlink": "cd ./src && rimraf node_modules && rimraf package.json && rimraf package-lock.json && npm unlink",
    "clean": "rimraf dist",
    "webpack-bundle-analyze": "webpack --profile --json > bundle-stats.json && webpack-bundle-analyzer bundle-stats.json",
    "check-circular-refs": "dpdm ./src/index.ts",
    "lint": "eslint ./src/**/*.*",
    "lint:fix": "eslint ./src/**/*.* --fix",
    "pipeline:validate-version": "node ./pipeline/validate-version.js"
  },
  "devDependencies": {
    "@babylonjs/core": "^6.2.0",
    "@babylonjs/gui": "^6.2.0",
    "@babylonjs/gui-editor": "^6.2.0",
    "@babylonjs/inspector": "^6.2.0",
    "@babylonjs/loaders": "^6.2.0",
    "@babylonjs/materials": "^6.2.0",
    "@babylonjs/serializers": "^6.2.0",
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.1",
    "@types/node": "^17.0.45",
    "@types/sinon": "^10.0.15",
    "@typescript-eslint/eslint-plugin": "^5.59.5",
    "@typescript-eslint/parser": "^5.59.5",
    "chai": "^4.3.7",
    "clean-webpack-plugin": "^4.0.0",
    "cpy-cli": "^4.2.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.40.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "html-webpack-plugin": "^5.5.1",
    "mocha": "^10.2.0",
    "recursive-copy": "^2.0.14",
    "rimraf": "^3.0.2",
    "rxjs": "^7.8.1",
    "semver": "^7.5.1",
    "sinon": "^15.0.4",
    "string-replace-loader": "^3.1.0",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "typedoc": "^0.24.7",
    "typescript": "^5.0.4",
    "webpack": "^5.82.0",
    "webpack-bundle-analyzer": "^4.8.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^3.11.3"
  },
  "peerDependencies": {
    "@babylonjs/core": "^6.2.0",
    "@babylonjs/gui": "^6.2.0",
    "@babylonjs/inspector": "^6.2.0",
    "rxjs": "^7.1.0"
  }
}